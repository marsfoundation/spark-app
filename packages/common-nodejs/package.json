{
  "name": "@marsfoundation/common-nodejs",
  "version": "0.0.1",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/sparkdotfi/spark-app.git",
    "directory": "packages/common-nodejs"
  },
  "exports": {
    "./env": {
      "import": {
        "@marsfoundation/local-spark-monorepo": "./src/env/index.ts",
        "types": "./dist/types/env/index.d.ts",
        "default": "./dist/esm/env/index.js"
      },
      "require": {
        "@marsfoundation/local-spark-monorepo": "./src/env/index.ts",
        "types": "./dist/types/env/index.d.ts",
        "default": "./dist/cjs/env/index.js"
      }
    },
    "./logger": {
      "import": {
        "@marsfoundation/local-spark-monorepo": "./src/logger/index.ts",
        "types": "./dist/types/logger/index.d.ts",
        "default": "./dist/esm/logger/index.js"
      },
      "require": {
        "@marsfoundation/local-spark-monorepo": "./src/logger/index.ts",
        "types": "./dist/types/logger/index.d.ts",
        "default": "./dist/cjs/logger/index.js"
      }
    }
  },
  "typesVersions": {
    "*": {
      "env": ["dist/types/env/index.d.ts"],
      "logger": ["dist/types/logger/index.d.ts"]
    }
  },
  "files": ["dist"],
  "scripts": {
    "lint": "eslint src",
    "verify": "concurrently --names \"LINT,TEST,TYPECHECK,LINT-CUSTOM\" -c \"bgMagenta.bold,bgGreen.bold,bgBlue.bold,bgCyan.bold\" \"pnpm run lint\" \"pnpm run test --silent\" \"pnpm run typecheck\"",
    "fix": "cd ../../ && pnpm run check:fix && cd - && pnpm run verify",
    "test": "mocha src/**/*.test.ts",
    "typecheck": "tsc --noEmit",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build": "pnpm run build:cjs && pnpm run build:esm",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "devDependencies": {
    "@sinonjs/fake-timers": "^13.0.5",
    "@types/express": "^5.0.0",
    "@types/mocha": "^10.0.10",
    "@types/sinonjs__fake-timers": "^8.1.5",
    "@types/uuid": "^10.0.0",
    "earl": "^1.3.0",
    "express": "^5.0.1",
    "mocha": "^10.8.2",
    "tinyspy": "^3.0.2"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "uuid": "^11.0.3"
  },
  "peerDependencies": {
    "@marsfoundation/common-universal": "workspace:^",
    "remeda": "^2.10.0",
    "zod": "^3.0"
  }
}
